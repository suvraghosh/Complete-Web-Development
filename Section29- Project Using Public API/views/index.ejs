<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Latest News</title>
  <link rel="stylesheet" href="/style.css" />
</head>

<body>
  <div class="main-con">
    <header id="nav">
      <!-- Navbar -->
      <div class="upper-nav">
        <ul class="topics">
          <li><a href="">bbc news</a></li>
          <li><a href="">हिंदी</a></li>
          <li><a href="">cricket</a></li>
          <li><a href="">india global</a></li>
          <li><a href="">movies</a></li>
          <li><a href="">food</a></li>
          <li><a href="">lifestyle</a></li>
          <li><a href="">health</a></li>
          <li><a href="">tech</a></li>
          <li><a href="">business</a></li>
          <li><a href="">games</a></li>
          <li><a href="">big bonus</a></li>
          <li><a href="">swasth</a></li>
          <li><a href="">shopping</a></li>
        </ul>
      </div>
      <div class="lower-nav">
        <ul class="topics bottom-navbar">
          <span class="letter">B</span>
          <span class="letter">B</span>
          <span class="letter">C</span>
          <li><a href="">live tv</a></li>
          <li><a href="">latest</a></li>
          <li><a href="">india</a></li>
          <li><a href="">video</a></li>
          <li><a href="">opinion</a></li>
          <li><a href="">cities</a></li>
          <li><a href="">world</a></li>
          <li><a href="">education</a></li>
          <li><a href="">offbeat</a></li>
          <li><a href="">feature</a></li>
          <li><a href="">trends</a></li>

          <!-- Search bar -->
          <div class="group">
            <svg class="icon" aria-hidden="true" viewBox="0 0 24 24">
              <g>
                <path
                  d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z">
                </path>
              </g>
            </svg>
            <input placeholder="Search News" type="search" class="input" />
          </div>
        </ul>
      </div>
    </header>

    <!-- News cover Section -->
    <aside class="left">
      <% for(let i=1; i<8; i++){ %>
        <div class="left-items">
          <img src="<%= usArticles[i].urlToImage %>" alt="usArticle-img" class="us-article-img" />
          <a href="<%= usArticles[i].url %>" target="_blank">
            <%= usArticles[i].title %>
          </a>
        </div>
        <% } %>
    </aside>

    <aside class="right">
      <% for(let i=8; i<15; i++){ %>
        <div class="left-items">
          <img src="<%= usArticles[i].urlToImage %>" alt="usArticle-img" class="us-article-img" />
          <a href="<%= usArticles[i].url %>" target="_blank">
            <%= usArticles[i].title %>
          </a>
        </div>
        <% } %>
    </aside>

    <div class="container">
      <% for (let i=1; i < articles.length; i++) { %>
        <div class="items">
          <p>
            <%= articles[i].title %>
          </p>
          <img src="<%= articles[i].urlToImage %>" alt="Article Image" class="article-img" />
          <a href="<%= articles[i].url %>" target="_blank">Read More</a>
        </div>
        <% } %>
    </div>

    <div class="middle-con">
      <% for(let i=15; i<19; i++){ %>   
          <div class="mid-items">
            <img src="<%= usArticles[i].urlToImage %>" alt="Article-img" class="article-img" />
            <a href="<%= usArticles[i].url %>" target="_blank">
              <%= usArticles[i].title %>
            </a>
          </div>
          <% } %>
    </div>

    <footer class="foot">
      <h4><span>&copy; Copyright 2023</span>, All Rights Reserved.</h4>
    </footer>
  </div>
</body>

</html>